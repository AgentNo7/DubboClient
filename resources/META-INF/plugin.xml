<idea-plugin>
    <id>com.your.company.unique.plugin.id</id>
    <name>Myplugin</name>
    <version>1.0</version>
    <vendor email="support@x-inverse.com" url="http://www.x-inverse.com">x-inverse</vendor>

    <description><![CDATA[
      Author: Keeper<br>
      Description: 这个是一个dubbo连接客户端，可以简化dubbo调试操作<br>
      <em></em>
    ]]></description>

    <change-notes><![CDATA[
      0.1<br>
      这个是0.1版本，加入基本的客户端连接和请求功能<br>
      0.2<br>
      0.2版本，加入多线程请求和设置按钮<br>
    ]]>
    </change-notes>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow id="Dubbo Console" anchor="bottom" factoryClass="com.inverse.plugin.DubboConsoleFactory"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="AAction" class="com.inverse.plugin.AAction" text="AAction" description="AAction">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>

</idea-plugin>